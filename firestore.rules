rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    // Restrict writes to your company domains (edit as needed)
    function hasAllowedDomain() {
      return request.auth.token.email.matches('.*@(platinumrepairs\\.co\\.za|techrevival\\.co\\.za)$');
    }

    // Anyone signed in can read
    match /{document=**} { allow read: if isSignedIn(); }

    // Only allowed domains can write
    match /technicians/{doc} {
      allow create, update, delete: if isSignedIn() && hasAllowedDomain();
      allow read: if isSignedIn();
    }
    match /tasks/{doc} {
      allow create, update, delete: if isSignedIn() && hasAllowedDomain();
      allow read: if isSignedIn();
    }
    match /assessments/{doc} {
      allow create, update, delete: if isSignedIn() && hasAllowedDomain();
      allow read: if isSignedIn();
    }
  }
}
